# ====================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ====================================

# Environment
NODE_ENV=production

# Frontend Configuration - NO API KEYS HERE (they go in backend/.env)
# API keys should NEVER be exposed to the frontend for security reasons

# Backend Configuration - Frontend communicates via proxy
VITE_BACKEND_URL=http://localhost:8080

# Security (kişisel kurulumda devre dışı)

# Database
DATABASE_PATH=./database/stories.db
DATABASE_BACKUP_INTERVAL=3600000

# Logging
LOG_LEVEL=warn
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=3

# Performance
COMPRESSION_LEVEL=3
CACHE_MAX_AGE=86400

# Monitoring
ENABLE_METRICS=false
METRICS_PORT=9090

# Health Check
HEALTH_CHECK_INTERVAL=30000
