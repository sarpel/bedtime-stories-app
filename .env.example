# ====================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ====================================

# Environment
NODE_ENV=production

# OpenAI Configuration
VITE_OPENAI_API_KEY=sk-your-openai-api-key
VITE_OPENAI_MODEL=gpt-5-mini
VITE_OPENAI_ENDPOINT=https://api.openai.com/v1/responses
# ElevenLabs Configuration
VITE_ELEVENLABS_API_KEY=your-elevenlabs-api-key
VITE_ELEVENLABS_VOICE_ID=xsGHrtxT5AdDzYXTQT0d
VITE_ELEVENLABS_MODEL=eleven_turbo_v2_5

# Backend Configuration (opsiyonel, dev'de Vite proxy kullanılır)
VITE_BACKEND_URL=http://localhost:8080

# Security (kişisel kurulumda devre dışı)

# Database
DATABASE_PATH=./database/stories.db
DATABASE_BACKUP_INTERVAL=3600000

# Logging
LOG_LEVEL=warn
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=3

# Performance
COMPRESSION_LEVEL=3
CACHE_MAX_AGE=86400

# Monitoring
ENABLE_METRICS=false
METRICS_PORT=9090

# Health Check
HEALTH_CHECK_INTERVAL=30000
