# ====================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ====================================

# Environment
NODE_ENV=production

# OpenAI Configuration
VITE_OPENAI_API_KEY=sk-your-openai-api-key
VITE_OPENAI_MODEL=gpt-4o-mini

# ElevenLabs Configuration
VITE_ELEVENLABS_API_KEY=your-elevenlabs-api-key
VITE_ELEVENLABS_VOICE_ID=xsGHrtxT5AdDzYXTQT0d
VITE_ELEVENLABS_MODEL=eleven_flash_v2_5

# Backend Configuration (opsiyonel, dev'de Vite proxy kullanılır)
# VITE_BACKEND_URL=

# Security (kişisel kurulumda devre dışı)

# Database
DATABASE_PATH=./database/stories.db
DATABASE_BACKUP_INTERVAL=3600000

# Logging
LOG_LEVEL=warn
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=5

# Performance
COMPRESSION_LEVEL=6
CACHE_MAX_AGE=86400

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Health Check
HEALTH_CHECK_INTERVAL=30000
