# Staging Environment Configuration
# Bu dosya staging/test environment için kullanılır

# Node Environment
NODE_ENV=staging

# Logging
LOG_LEVEL=info

# API Keys - STAGING VALUES
# Test API anahtarları veya development anahtarları kullanın
OPENAI_API_KEY=sk-your-staging-openai-key
GEMINI_LLM_API_KEY=your-staging-gemini-llm-key
GEMINI_TTS_API_KEY=your-staging-gemini-tts-key
ELEVENLABS_API_KEY=xi-api-key-your-staging-key

# Server Configuration
PORT=3001

# Database
DATABASE_PATH=./database/stories-staging.db

# Security Headers
# CORS_ORIGIN=https://staging.yourdomain.com

# Performance
COMPRESSION_ENABLED=true
CACHE_MAX_AGE=3600

# Health Check
HEALTH_CHECK_ENABLED=true

# Testing
ENABLE_TEST_ENDPOINTS=true
MOCK_API_RESPONSES=false
